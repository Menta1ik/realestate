{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "CommonJS",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "dist-api",
    "jsx": "react-jsx",
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "backend/src",
    "api"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "src"
  ]
}
